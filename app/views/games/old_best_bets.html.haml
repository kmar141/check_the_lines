.card.card-block
  %h4.card-title.center Past Picks
  %p.card-text.center Enter Strength number to filter by game strength
  = form_tag old_best_bets_games_path, :method => 'get' do
    = number_field_tag :search, params[:search], placeholder: "Strength", class: "form-control center form-width-25 border-black center"
    = submit_tag "Filter", :name => nil, class: "btn strength-button center"
%ul.list-group
  %li.list-group-item
    %h2.seconday-font.center
      = link_to " NCAAF Record", "#ncaaf"
    %h1.secondary-font.center
      Correct: #{@old_games.where(sport: "ncaa_football").where(correct_prediction: true).count}
      Incorrect: #{@old_games.where(sport: "ncaa_football").where(correct_prediction: false).count}
  %li.list-group-item
    %h2.seconday-font.center
      = link_to " NFL Record", "#nfl"
    %h1.secondary-font.center
      Correct: #{@old_games.where(sport: "nfl").where(correct_prediction: true).count}
      Incorrect: #{@old_games.where(sport: "nfl").where(correct_prediction: false).count}
  %li.list-group-item
    %h2.seconday-font.center
      = link_to " NBA Record", "#nba"
    %h1.secondary-font.center
