    %h2.seconday-font.center
      = link_to " NCAAF Over/Under Record", "#ncaafou"
    %h1.secondary-font.center
      Correct: #{@over_under_games.where(sport: "ncaa_football").where(correct_prediction: true).count}
      Incorrect: #{@over_under_games.where(sport: "ncaa_football").where(correct_prediction: false).count}

  %li.list-group-item
    %h2.seconday-font.center
      = link_to " NCAAB Over/Under Record", "#ncaabou"
    %h1.secondary-font.center
      Correct: #{@over_under_games.where(sport: "ncaa_basketball").where(correct_prediction: true).count}
      Incorrect: #{@over_under_games.where(sport: "ncaa_basketball").where(correct_prediction: false).count}

  %li.list-group-item
    %h2.seconday-font.center
      Total Record
    %h1.secondary-font.center
      Correct: #{@old_games.where(correct_prediction: true).count + @over_under_games.where(correct_prediction: true).count}
      Incorrect: #{@old_games.where(correct_prediction: false).count + @over_under_games.where(correct_prediction: false).count}

