
.jumbotron.col-xs-6.offset-xs-3
  %h1.display-3.center.big-font Past Picks
  %p.center.gray.border
  %p
    = form_tag old_best_bets_games_path, :method => 'get' do
      = number_field_tag :search, params[:search], placeholder: "Strength", class: "form-control center form-width-25 border-black"
      = submit_tag "Filter", :name => nil, class: "btn strength-button"
      %button.btn.question-button{"data-target" => ".bd-example-modal-lg", "data-toggle" => "modal"} ?

